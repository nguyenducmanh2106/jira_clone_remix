{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./src/app/styles/app.css -o ./src/app/styles/app-compiled.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./src/app/styles/app.css -o ./src/app/styles/app-compiled.css",
    "start": "remix-serve build",
    "start:migrate": "npx prisma migrate deploy && npx prisma db seed && npm run start",
    "deploy": "fly deploy -a jira-clone",
    "type-check": "tsc --pretty --noEmit -p tsconfig.json",
    "lint": "pnpm eslint --ext ts,tsx src",
    "test": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-all": "pnpm run type-check && pnpm run lint && pnpm run test",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "generate": "npx react-swagger-openapi --input http://localhost:5000/swagger/v1/swagger.json --output ./src/api"
  },
  "prisma": {
    "schema": "src/infrastructure/db/schema.prisma",
    "seed": "ts-node -r tsconfig-paths/register --compiler-options {\"module\":\"CommonJS\"} src/infrastructure/db/seed.ts"
  },
